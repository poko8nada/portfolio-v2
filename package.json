{
	"name": "portfolio-v2",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"generate-posts-index": "node scripts/generate-posts-index.js",
		"watch-posts": "chokidar 'public/posts/**/*.md' -c 'npm run generate-posts-index'",
		"dev": "next dev",
		"dev:with-posts": "concurrently \"npm run dev\" \"npm run watch-posts\"",
		"build": "next build && npm run generate-posts-index",
		"start": "next start",
		"lint": "next lint",
		"preview": "npm run generate-posts-index && opennextjs-cloudflare build && opennextjs-cloudflare preview",
		"deploy": "npm run generate-posts-index && opennextjs-cloudflare build && opennextjs-cloudflare deploy",
		"cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts"
	},
	"dependencies": {
		"@next/third-parties": "^15.1.0",
		"@opennextjs/cloudflare": "^1.3.1",
		"@tailwindcss/postcss": "^4.0.0",
		"clsx": "^2.1.1",
		"gray-matter": "^4.0.3",
		"markdown-to-jsx": "^7.7.4",
		"next": "^15.2.4",
		"postcss": "^8.5.1",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"react-syntax-highlighter": "^15.6.1",
		"tailwind-merge": "^2.6.0",
		"tailwindcss": "^4.0.0",
		"tailwindcss-animate": "^1.0.7"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/node": "^20",
		"@types/react": "^18",
		"@types/react-dom": "^18",
		"@types/react-syntax-highlighter": "^15.5.13",
		"chokidar-cli": "^3.0.0",
		"concurrently": "^9.2.0",
		"typescript": "^5",
		"wrangler": "^4.20.5"
	}
}