{
  "name": "portfolio-v2",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "generate-posts-index": "node scripts/generate-posts-index.js",
    "watch-posts": "chokidar 'public/posts/**/*.md' -c 'npm run generate-posts-index'",
    "prepare-assets": "npm run generate-posts-index",
    "dev": "next dev",
    "dev:with-posts": "npm run prepare-assets && concurrently \"next dev\" \"npm run watch-posts\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "deploy": "npm run prepare-assets && opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^3.10.0",
    "@marsidev/react-turnstile": "^1.4.0",
    "@next/third-parties": "^15.5.7",
    "@opennextjs/cloudflare": "^1.14.4",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/postcss": "^4.1.17",
    "aws4fetch": "^1.0.20",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.26",
    "gray-matter": "^4.0.3",
    "markdown-to-jsx": "^7.7.17",
    "motion": "^12.23.26",
    "next": "15.3.6",
    "postcss": "^8.5.6",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-hook-form": "^7.68.0",
    "react-syntax-highlighter": "^15.6.6",
    "resend": "^4.8.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^4.1.17",
    "tailwindcss-animate": "^1.0.7",
    "zod": "3.22.3"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.948.0",
    "@biomejs/biome": "2.0.6",
    "@types/node": "^20.19.26",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@types/react-syntax-highlighter": "^15.5.13",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "wrangler": "^4.53.0"
  },
  "pnpm": {
    "overrides": {
      "zod": "3.22.3"
    }
  }
}
